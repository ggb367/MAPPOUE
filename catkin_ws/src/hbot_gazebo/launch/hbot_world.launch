<launch>
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" value="$(find hbot_gazebo)/worlds/hbot.world"/>
		<arg name="gui" value="true"/>
	</include>
	<!-- urdf xml robot description loaded on the Parameter Server, converting the xacro into a proper urdf file-->
	<param name="robot_description" command="$(find xacro)/xacro.py '$(find hbot_description)/urdf/hbot.xacro'" />

	<!-- push robot_description to factory and spawn robot in gazebo -->
	<node name="hbot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
		args="-urdf -param robot_description -model hbot" />
</launch>
